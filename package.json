{
	"name": "hono-starter-kit",
	"type": "module",
	"scripts": {
		"dev": "tsx watch --env-file .env.sample src/index.ts",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"biomecheck": "biome check --write",
		"build": "tsc",
		"start": "node dist/index.js",
		"prepare": "husky",
		"db:generate": "drizzle-kit generate --config src/lib/drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config src/lib/drizzle.config.ts",
		"db:push": "drizzle-kit push --config src/lib/drizzle.config.ts",
		"db:dropMigration": "drizzle-kit drop --config src/lib/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config src/lib/drizzle.config.ts"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": " pnpm biomecheck",
		"*.{json,css,html}": "pnpm format"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.3",
		"pg": "^8.16.3",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.1",
		"@types/node": "^20.11.17",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.5",
		"husky": "9.1.7",
		"lint-staged": "16.2.6",
		"tsx": "^4.20.6",
		"typescript": "^5.8.3"
	}
}
